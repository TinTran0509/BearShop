@{
    var lstAction = (List<int>)HttpContext.Current.Session["Action"];
}
@using Web.Model.CustomModel
@model List<Web.Model.Category>
<table class="table table-striped cabn_datatable">
    <thead>
        <tr>
            <th>
                <input type="hidden" id="hdfID" />
                <div class="checkbox">
                    <input id="chkall" type="checkbox">
                    <label for="chkall"></label>
                </div>
            </th>
            <th>Danh mục cha</th>
            <th>Tên danh mục</th>
            <th>Thứ tự</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="vertical-align: middle;">
                    <div class="checkbox">
                        <input type="checkbox" value="@item.ID" id="chk'@item.ID'">
                        <label for="chk'@item.ID'"></label>
                    </div>
                </td>
                <td style="vertical-align: middle;">@item.ParentName</td>
                <td style="vertical-align: middle;">@Html.Raw(string.Concat(Enumerable.Repeat("--", item.Level1)) + "&nbsp" + item.Name)</td>
                <td style="vertical-align: middle;">
                    <input type="hidden" class="item_ID" value="@item.ID" />
                    @Html.TextBoxFor(g => item.Ordering, new { @class = "form-control width50 text-center lockchar" })
                </td>
                <td style="vertical-align: middle;">
                    <div class="btn-list pull-right mr5">
                        @if (lstAction != null && lstAction.Contains((int)EnumHelper.Action.Edit))
                        {
                            <a href="#" class="btn btn-primary btn-bordered" onclick="Category.loadfrmEdit(@item.ID) "><i class="glyphicon glyphicon-pencil"></i></a>
                        }
                        @if (lstAction != null && lstAction.Contains((int)EnumHelper.Action.Delete))
                        {
                            <a href="#" class="btn btn-danger btn-bordered" onclick="Category.ondelete(@item.ID) ">
                                <i class="glyphicon glyphicon-trash"></i>
                            </a>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function() {
        InitClickCheckAllInTable("chkall", function(res) {
            $("#hdfID").val(res);
        });
        $('.cabn_datatable').dataTable(
            {
                "oLanguage": {
                    "sUrl": "/Content/Vietnamese.json"
                },
            }
        );
        $('.lockchar').on("keypress", function () {
            return event.charCode >= 48 && event.charCode <= 57
        })
    });
</script>

 
@model Web.Model.Video
@using (Ajax.BeginForm("Edit", "Video", null,
                new AjaxOptions
                {
                    HttpMethod = "POST",
                    OnSuccess = "video.onEditSuccess"
                },
                new { @id = "basicForm", @class = "form-horizontal" }))
{
    @Html.HiddenFor(g => g.ID)
    <div class="form-group">
        <label class="col-md-2 control-label">Tên video</label>
        <div class="col-md-10">
            @Html.TextBoxFor(g => g.Name, new { @class = "form-control", placeholder = "Tên video" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Thứ tự</label>
        <div class="col-md-3">
            @Html.TextBoxFor(g => g.Ordering, new { @class = "form-control", Value = Model.Ordering  })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10 pull-right">
            <div class="checkbox checkbox-primary">
                <input id="Status" name="Status" type="checkbox" @(Model.Status ? "checked" : "") value="true">
                <label for="Status">
                    Kích hoạt
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10 pull-right">
            <div class="checkbox checkbox-primary">
                <input id="IsShowPlay" name="IsShowPlay" type="checkbox" @(Model.IsShowPlay ? "checked" : "") value="true">
                <label for="Status">
                    Hiển thị bên trái trang
                </label>
            </div>
        </div>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary waves-effect waves-light">Cập nhật</button>
    </div>
}
<script>
    $(document).ready(function () {
        $("#basicForm").validate({
            rules:
            {
                Name:
                {
                    required: true
                }
            },
            messages:
            {
                Name:
                {
                    required: "Bạn chưa nhập tiêu đề"
                }
            }
        });
       
    });
</script>
<style>
    .wrap-thumb-video {
        position: relative;
    }

    .thumb-video {
        position: absolute;
    }

    .playvideo {
        position: absolute;
        width: 40px;
        left: 38px;
        top: 33px;
    }
</style>
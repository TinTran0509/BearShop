@using Web.Core
@model List<Web.Model.tbl_FeedBack>
<table class="table table-striped cabn_datatable">
    <thead>
        <tr>
            <th>
                <input type="hidden" id="hdfID" />
                <div class="checkbox">
                    <input id="chkall" type="checkbox">
                    <label for="chkall"></label>
                </div>
            </th>
            <th>Họ tên</th>
            <th>Điện thoại</th>
            <th>Email</th>
            <th>Tiêu đề</th>
            <th>Nội dung</th>
            <th>Ngày tạo</th>
            <th>Trạng thái</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="vertical-align: middle;">
                    <div class="checkbox">
                        <input type="checkbox" value="@item.ID" id="chk'@item.ID'">
                        <label for="chk'@item.ID'"></label>
                    </div>
                </td>
                <td style="cursor:pointer" onclick="feedback.loadDetail(@item.ID)">@item.FullName</td>
                <td>@item.Phone</td>
                <td>@item.Email</td>
                <td style="cursor:pointer" onclick="feedback.loadDetail(@item.ID)">@item.Title</td>
                <td style="cursor:pointer" onclick="feedback.loadDetail(@item.ID)">@HelperString.TruncateByWord(HelperString.StripHTML(HttpUtility.HtmlDecode(item.Contents)), 120)</td>
                <td>@string.Format("{0:dd/MM/yyyy HH:mm}", item.CreatedDate)</td>
                <td style="vertical-align: middle;">@Html.Raw((bool)item.Status ? "<span style='color:green'>Đã trả lời</span>" : "<span style='color:red'>Chưa trả lời</span>")</td>
                <td style="width:120px">
                    @if (!item.Status)
                    {
                        <a href="javascript:void(0)" class="btn btn-primary btn-bordered" onclick="feedback.onReply(@item.ID)" title="Sửa">
                            <i class="glyphicon glyphicon-pencil"></i>
                        </a>
                    }
                    @if (item.Status)
                    {
                        <a href="javascript:void(0)" class="btn btn-danger btn-bordered" onclick="feedback.ondelete(@item.ID) " title="Xóa">
                            <i class="glyphicon glyphicon-trash"></i>
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
